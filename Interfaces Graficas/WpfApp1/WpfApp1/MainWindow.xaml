<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="White">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Button Name="BotonIn" Content="Invierte" Margin="5" Click="BotonInvierte_Click"/>
                <Button Name="BotonMa" Content="Mayuscula" Margin="5" Click="BotonMayusculas_Click"/>
                <Button Name="BotonRo" Background="IndianRed" Margin="5" Height="15" Click="BotonRojo_Click"/>
                <Button Name="BotonAz" Background="Aqua" Margin="5" Height="15" Click="BotonAzul_Click"/>
            </StackPanel>
            <StackPanel>
                <TextBox Name="Caja" Width="200" Height="20" Margin="5"/>
                <Label Name="Etiqueta" Background="AliceBlue" Width="200" Height="25" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

